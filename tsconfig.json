{
  "compilerOptions": {
    "target": "es2016", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2015"
    ],
    "module": "esnext",
    "rootDir": "./src",     
    "moduleResolution": "node", 
    "baseUrl": ".",  
    "outDir": "./build",    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}