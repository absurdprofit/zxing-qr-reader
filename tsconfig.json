{
  "compilerOptions": {
    "target": "ESNext", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2015"
    ],
    "module": "esnext",
    "rootDir": "./src",     
    "moduleResolution": "node", 
    "baseUrl": ".",  
    "outDir": "./build",    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "./src/**/*"
  ]
}